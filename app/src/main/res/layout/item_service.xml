<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="12dp" android:clickable="true" android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:padding="12dp">

        <TextView
            android:id="@+id/tvName"
            android:textStyle="bold" android:textSize="16sp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvAmountDate"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="2dp"/>

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnEdit"
                android:text="@string/btn_edit"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnPaid"
                android:text="@string/btn_paid"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/btnDelete"
                android:text="@string/btn_delete"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
